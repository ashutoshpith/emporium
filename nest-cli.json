{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/emporium/src",
  "monorepo": true,
  "root": "apps/emporium",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/emporium/tsconfig.app.json"
  },
  "projects": {
    "emporium": {
      "type": "application",
      "root": "apps/emporium",
      "entryFile": "main",
      "sourceRoot": "apps/emporium/src",
      "compilerOptions": {
        "tsConfigPath": "apps/emporium/tsconfig.app.json"
      }
    },
    "identity": {
      "type": "application",
      "root": "apps/identity",
      "entryFile": "main",
      "sourceRoot": "apps/identity/src",
      "compilerOptions": {
        "tsConfigPath": "apps/identity/tsconfig.app.json"
      }
    }
  }
}